{% extends "base.html.twig" %}

{% block title %}Inscription{% endblock %}

{% block body %}

<div class="container py-4 justify-content-center">

    <h2 class="text-center text-white bg-dark border border-success col-md-7 col-lg-7 py-3 mx-auto my-2 rounded">
    Inscription
    </h2>
    {{ form_start(form, {'attr': { 'class' : 'col-md-7 col-lg-5 mx-auto' } }) }}
        {{ form_row(form.nom, { 'label' : 'Nom d\'utilisateur' }) }}
        {{ form_row(form.prenom, { 'label' : 'Prenom' }) }}
        {{ form_row(form.email, { 'label' : 'Votre email' }) }}
        {{ form_row(form.password, { 'label' : 'Mot de passe' }) }}
        {{ form_row(form.confirm_password, { 'label' : 'Veuillez confirmer votre mot de passe' }) }}

        <button type="submit" class="btn btn-dark border border-success my-4 d-block mx-auto">Inscription</button>
    {{ form_end(form) }}

</div>



{% endblock %}