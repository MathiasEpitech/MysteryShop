{% extends 'base.html.twig' %}

{% block title %}Categorie index
{% endblock %}

{% block body %}

	<div class="container py-4">


			<a class="btn btn-sm btn-primary my-3" href="{{ path('app_admin') }}"><i class="fa-solid fa-angle-left"></i> Retour</a>


		<h2 class="text-center text-white bg-primary col-md-7 col-lg-7 py-4 mx-auto my-2">Categorie index</h2>

        <div class="row justify-content-center">

            <a href="{{ path('app_admin_cat_new') }}" class="btn btn-primary btn-lg col-md-4 col-sm-5 col-6 my-4">Ajouter une categorie</a>

        </div>

		<table class="table table-striped table-hover text-center">
			<thead class="text-center text-white bg-primary">
				<tr>
					<th>Nom</th>
					<th>Slug</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for categorie in categories %}
					<tr>
						<td>{{ categorie.nom }}</td>
						<td>{{ categorie.slug }}</td>
						<td>
							<a class="btn btn-sm bg-info text-white p-1" href="{{ path('app_admin_cat_show', {'id': categorie.id}) }}"><i class="fa-solid fa-eye"></i></a>
							<a class="btn btn-sm bg-warning text-white p-1"href="{{ path('app_admin_cat_edit', {'id': categorie.id}) }}"><i class="fa-solid fa-pen"></i></a>
                            {# {{ include('admin_cat/_delete_form.html.twig') }} #}
                            <a class="btn btn-sm bg-danger text-white p-1" onclick="return(confirm('Etes vous certain de vouloir supprimer cette categorie ?'))" href="{{ path('app_admin_cat_supp', {'id': categorie.id}) }}"><i class="fa-solid fa-trash"></i></a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">Aucune categorie enregistr√©s</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
