{% extends 'base.html.twig' %}

{% block title %}Hello AvisAdminController!
{% endblock %}

{% block body %}

	<div class="container py-4 justify-content-center">

		<a class="btn btn-sm btn-primary my-3" href="{{ path('app_admin') }}">
			<i class="fa-solid fa-angle-left"></i>
			Retour</a>


		<h2 class="text-center text-white bg-primary col-md-7 col-lg-7 py-4 mx-auto my-2">Avis index</h2>

		<table class="table table-striped table-hover text-center">
			<thead class="text-center text-white bg-primary">
				<tr>
					<th>Nom du produit</th>
					<th>Auteur</th>
          <th>Date / Heure </th>
					<th>Commentaire</th>
          <th>Action</th>
				</tr>
			</thead>
			<tbody>
				{% for a in avis %}
					<tr>
						<td>{{ a.produit.nom }}</td>
						<td>{{ a.auteur }}</td>
            <td>{{a.createAt|date('d/m/Y')}} / {{a.createAt|date('H:i:s')}}</td>
						<td>{{ a.commentaire }}</td>
						<td>
              <a class="btn btn-sm bg-info text-white p-1" href="{{ path('app_admin_avis_detail', {'id': a.id}) }}"><i class="fa-solid fa-eye"></i></a>
							<a class="btn btn-sm bg-warning text-white p-1"href="{{ path('app_admin_avis_edit', {'id': a.id}) }}"><i class="fa-solid fa-pen"></i></a>
							<a class="btn btn-sm bg-danger text-white p-1" onclick="return(confirm('Etes vous certain de vouloir supprimer cette avis ?'))" href="{{ path('app_admin_avis_del', {'id': a.id}) }}"><i class="fa-solid fa-trash"></i></a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">Aucune categorie enregistr√©s</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
