{% extends "base.html.twig" %}

{% block title %}{% endblock %}

{% block body %}

    <div class="container py-4 justify-content-center">

        <a class="btn btn-sm btn-primary my-3" href="{{ path('app_admin') }}">
            <i class="fa-solid fa-angle-left"></i>
        Retour</a>


        <h2 class="text-center text-white bg-primary col-md-7 col-lg-7 py-4 mx-auto my-2">User index</h2>

        {{ form_start(form, {'attr': { 'class' : 'col-md-7 col-lg-5 mx-auto' } }) }}

            {{ form_row(form.nom) }}

            {{ form_row(form.prenom) }}

            {{ form_row(form.email) }}

            {{ form_row(form.roles) }}

            {{ form_row(form.adresse) }}

            {{ form_row(form.codePostal) }}

            {{ form_row(form.ville) }}

            {{ form_row(form.pays) }}
            
            <div class="text-center">
                <button type="submit" class="btn btn-primary text-center">Modifier</button>
            </div>
            

        {{ form_end(form) }}

    </div>


{% endblock %}