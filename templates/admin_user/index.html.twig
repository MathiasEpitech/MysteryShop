{% extends 'base.html.twig' %}

{% block title %}Hello AdminUserController!{% endblock %}

{% block body %}

    <div class="container py-4 justify-content-center">

        <a class="btn btn-sm btn-primary my-3" href="{{ path('app_admin') }}">
            <i class="fa-solid fa-angle-left"></i>
        Retour</a>


        <h2 class="text-center text-white bg-transparent col-md-7 col-lg-7 py-3 mx-auto my-2 border border-success rounded">User index</h2>

        <div class="row justify-content-center row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-3 row-cols-xl-5 g-3 gap-1 m-3">

            {% for user in users %}
                    
                <div class="card text-center">

                    <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">

                        <h2 class="text-center text-white bg-transparent p-3 py-2 my-2 border border-success rounded"><i class="fa-solid fa-user"></i></h2>

                    </div>

                    <div class="card-header">{{user.email}}</div>

                    <div class="card-body">

                        <p class="card-title">{{user.prenom}} {{user.nom}}</p>

                        <hr>

                        <p class="card-text">{{user.adresse}}</p>

                        <p class="card-text">{{user.ville}} {{user.codePostal}}</p>

                        <p class="card-text">{{user.pays}}</p>


                    </div>

                    <div class="card-footer">

                        <a href="" class="btn btn-sm btn-info"><i class="fa-solid fa-eye"></i></a>
                        <a href="{{ path('app_admin_user_editer', { 'id': user.id} ) }}" class="btn btn-sm btn-warning"><i class="fa-solid fa-pen"></i></a>
                        <a onclick="return(confirm('Etes vous certain de vouloir supprimer cette utilisateur ?'))" href="{{ path('app_admin_user_supp', { 'id': user.id} ) }}" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i></a>

                    </div>

                </div>

            {% endfor %}
            
        </div>

    </div>

{% endblock %}
