{% extends "base.html.twig" %}

{% block title %}Ajouter un produit{% endblock %}

{% block body %}

<div class="container">

    <h2 class="text-center text-white bg-dark border border-success rounded col-md-7 col-lg-7 py-3 mx-auto my-2">
    Ajouter un nouveau produit
    </h2>
    {{ form_start(form, {'attr': { 'class' : 'col-md-7 col-lg-5 mx-auto' } }) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.categorie) }}
        {{ form_row(form.description) }}
        {{ form_row(form.prix) }}
        {{ form_row(form.image) }}
        {{ form_row(form.stock) }}

        <button type="submit" class="d-block mx-auto btn btn-dark border border-success">Ajouter</button>
    {{ form_end(form) }}

</div>



{% endblock %}